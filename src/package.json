{
  "name": "freebusy-api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node scripts/generate-version.mjs && cp .env .dev.vars 2>/dev/null || true; wrangler dev --config wrangler.toml",
    "deploy": "node scripts/generate-version.mjs && wrangler deploy --config wrangler.toml",
    "build": "node scripts/generate-version.mjs && tsc --noEmit",
    "check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage --coverage.reporter=html --coverage.reporter=text --coverage.reporter=json-summary",
    "badge:coverage": "node scripts/generate-badges.mjs"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241205.0",
    "@vitest/coverage-v8": "^1.6.1",
    "badge-maker": "^3.3.1",
    "typescript": "^5.6.3",
    "vitest": "^1.6.0",
    "wrangler": "^4.54.0"
  }
}
